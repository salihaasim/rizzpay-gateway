
# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database
DB_HOST=rizzpay-test-db.cluster-xyz.ap-south-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=rizzpay
DB_USER=rizzpay_admin
DB_PASSWORD=${DB_PASSWORD} # From AWS Secrets Manager

# Redis (for session management)
REDIS_HOST=rizzpay-test-redis.xyz.cache.amazonaws.com
REDIS_PORT=6379

# AWS Configuration
AWS_REGION=ap-south-1
S3_BUCKET=rizzpay-test-uploads

# Security
JWT_SECRET=${JWT_SECRET} # From AWS Secrets Manager
API_KEY_PREFIX=rizz_test_

# External APIs
RAZORPAY_KEY_ID=${RAZORPAY_TEST_KEY_ID}
RAZORPAY_KEY_SECRET=${RAZORPAY_TEST_KEY_SECRET}

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/ecs/rizzpay-test
SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
FEATURE_BULK_PAYOUT=true
FEATURE_WEBHOOK_RETRY=true
FEATURE_ENHANCED_LOGGING=true
